 <!-- Felhasználók listázása -->
 <div class="container mt-3">
    <h2 class="text-center mb-2">Összes Felhasználó</h2>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Név</th>
                <th scope="col">Email</th>
                <th scope="col">Regisztráció Dátuma</th>
                <th scope="col">Szerepkör</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(item => { %>
                <tr>
                    <td><%= item.user_id %></td>
                    <td><%= item.name %></td> 
                    <td><%= item.email %></td>
                    <td><%= item.membership_date %></td>
                    <td><%= item.role %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>