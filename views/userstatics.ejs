<div class="container mt-3" >

    <h2 class="mb-3">A legtöbb kölcsönzéssel rendelkező felhasználók</h2>
    <table  style="width: 35%;" class="table table-striped table-hover mb-5">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Felhasználó</th>
                <th scope="col" class="text-right" style="text-align: right;">Kölcsönzések száma</th> <!-- Jobbra igazítva -->
            </tr>
        </thead>
        <tbody>
            <% userStats.forEach(function(user) { %>
                <tr>
                    <td><%= user.name %></td>
                    <td class="text-right" style="text-align: right;"><%= user.rental_count %></td> <!-- Jobbra igazítva -->
                </tr>
            <% }) %>
        </tbody>
    </table>

    <h2 class="mb-3">A legtöbbet kölcsönzött tárgyak</h2>
    <table style="width: 35%;"class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Tárgy</th>
                <th scope="col" class="text-right" style="text-align: right;">Kölcsönzések száma</th> <!-- Jobbra igazítva -->
            </tr>
        </thead>
        <tbody>
            <% itemStats.forEach(function(item) { %>
                <tr>
                    <td><%= item.title %></td>
                    <td class="text-right" style="text-align: right;"><%= item.rental_count %></td> <!-- Jobbra igazítva -->
                </tr>
            <% }) %>
        </tbody>
    </table>

</div>
