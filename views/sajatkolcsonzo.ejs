<%- include('header') %>

<div class="container my-5">
    <h1 class="text-center mb-4">Kölcsönzések Megtekintése</h1>

    <%- include('message') %>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Kölcsönzés Dátuma</th>
                <th scope="col">Tárgy Címe</th>
                <th scope="col">Visszahozás Dátuma</th>
            </tr>
        </thead>
        <tbody>
            <% results.forEach(item => { %>
                <tr>
                    <td><%= item.rental_date %></td>
                    <td><%= item.item_title %></td> <!-- Tárgy neve -->
                    <td>
                        <% if (item.return_date) { %>
                            <%= item.return_date %>
                        <% } else { %>
                            <span class="text-danger">Nincs visszahozva</span>
                        <% } %>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<%- include('footer') %>
